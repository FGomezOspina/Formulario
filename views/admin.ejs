<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Administración de Clientes</title>
    <!-- Link a CSS externo -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Link a Google Fonts para una tipografía más moderna -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Link a Font Awesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Link a DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <style>
        /* Estilos para el Modal */
        .modal {
            display: none; /* Oculto por defecto */
            position: fixed; /* Fijo en la pantalla */
            z-index: 1000; /* Asegurar que esté encima de otros elementos */
            left: 0;
            top: 0;
            width: 100%; /* Ancho completo */
            height: 100%; /* Altura completa */
            overflow: auto; /* Habilitar scroll si es necesario */
            background-color: rgba(0,0,0,0.8); /* Fondo semi-transparente */
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            position: relative;
            margin: auto;
            padding: 0;
            width: 80%;
            max-width: 700px;
        }

        .modal-content img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        /* Botón de Cerrar */
        .close-modal {
            position: absolute;
            top: 10px;
            right: 25px;
            color: #fff;
            font-size: 35px;
            font-weight: bold;
            cursor: pointer;
        }

        .close-modal:hover,
        .close-modal:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }

        /* Estilos para las tablas */
        .table-container {
            margin: 40px auto;
            width: 90%;
            overflow-x: auto;
        }

        table.display {
            width: 100%;
            border-collapse: collapse;
        }

        table.display th,
        table.display td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        table.display th {
            background-color: #f2f2f2;
        }

        table.display tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table.display tr:hover {
            background-color: #ddd;
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        /* Estilos para las imágenes de logo */
        .logo-image {
            height: 50px;
            width: auto;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .logo-image:hover {
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <h1>Administración de Clientes</h1>
        </div>
    </header>
    <main>
        <!-- Tabla para Clientes Agregados por Tarjeta -->
        <div class="table-container">
            <h2>Clientes Agregados por Tarjeta</h2>
            <table id="clientsTable" class="display">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Texto Extraído</th>
                        <th>Notas Adicionales</th>
                        <th>Fecha de Envío</th>
                        <th>Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.forEach(client => { %>
                        <tr>
                            <td><%= client.email %></td> <!-- Mostrar Email -->
                            <td><%= client.extractedText %></td>
                            <td><%= client.additionalNotes %></td>
                            <td><%= client.submissionDate ? client.submissionDate.toDate().toLocaleString() : 'N/A' %></td>
                            <td>
                                <% if (client.logoURL) { %>
                                    <img src="<%= client.logoURL %>" alt="Logo" class="logo-image clickable">
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Tabla para Clientes Agregados Manualmente -->
        <div class="table-container">
            <h2>Clientes Agregados Manualmente</h2>
            <table id="manualClientsTable" class="display">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Notas Adicionales</th>
                        <th>Fecha de Envío</th>
                        <th>Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <% manualClients.forEach(client => { %>
                        <tr>
                            <td><%= client.email %></td>
                            <td><%= client.name %></td>
                            <td><%= client.phone %></td>
                            <td><%= client.additionalNotes %></td>
                            <td><%= client.submissionDate ? client.submissionDate.toDate().toLocaleString() : 'N/A' %></td>
                            <td>
                                <% if (client.logoURL) { %>
                                    <img src="<%= client.logoURL %>" alt="Logo" class="logo-image clickable">
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Tabla para Clientes Agregados Tarjeta Julian -->
        <div class="table-container">
            <h2>Clientes Agregados Tarjeta Julian</h2>
            <table id="julianClientsTable" class="display">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Notas Adicionales</th>
                        <th>Fecha de Envío</th>
                        <th>Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <% julianClients.forEach(client => { %>
                        <tr>
                            <td><%= client.email %></td>
                            <td><%= client.name %></td>
                            <td><%= client.phone %></td>
                            <td><%= client.additionalNotes %></td>
                            <td><%= client.submissionDate ? client.submissionDate.toDate().toLocaleString() : 'N/A' %></td>
                            <td>
                                <% if (client.logoURL) { %>
                                    <img src="<%= client.logoURL %>" alt="Logo" class="logo-image clickable">
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Majorfd S.A.S. Todos los derechos reservados.</p>
    </footer>

    <!-- Modal para Mostrar el Logo Agrandado -->
    <div id="logoModal" class="modal">
        <span class="close-modal">&times;</span>
        <div class="modal-content">
            <img id="modalImage" src="" alt="Logo Agrandado">
        </div>
    </div>

    <!-- Scripts de jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Scripts de DataTables -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <!-- Script de Inicialización de DataTables -->
    <script>
        $(document).ready(function() {
            // Inicializar DataTables para Clientes por Tarjeta
            $('#clientsTable').DataTable({
                "order": [[ 3, "desc" ]], // Ordenar por Fecha de Envío descendente (índice 3)
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Logo)
                ]
            });

            // Inicializar DataTables para Clientes Manuales
            $('#manualClientsTable').DataTable({
                "order": [[ 4, "desc" ]], // Ordenar por Fecha de Envío descendente (índice 4)
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Logo)
                ]
            });

            // Inicializar DataTables para Clientes Tarjeta Julian
            $('#julianClientsTable').DataTable({
                "order": [[ 4, "desc" ]], // Ordenar por Fecha de Envío descendente (índice 4)
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Logo)
                ]
            });
        });

        // Funcionalidad del Modal
        const modal = document.getElementById("logoModal");
        const modalImg = document.getElementById("modalImage");
        const closeBtn = document.getElementsByClassName("close-modal")[0];

        // Abrir el modal al hacer clic en una imagen de logo
        const logos = document.querySelectorAll(".logo-image.clickable");
        logos.forEach(function(logo) {
            logo.addEventListener("click", function() {
                modal.style.display = "flex";
                modalImg.src = this.src;
            });
        });

        // Cerrar el modal al hacer clic en la 'x'
        closeBtn.onclick = function() { 
            modal.style.display = "none";
        }

        // Cerrar el modal al hacer clic fuera de la imagen
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // Cerrar el modal con la tecla Esc
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                modal.style.display = "none";
            }
        });
    </script>
</body>
</html>


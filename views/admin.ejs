<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Administración de Clientes</title>
    <!-- Link a CSS externo -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Link a Google Fonts para una tipografía más moderna -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Link a Font Awesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Link a DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <style>
        /* Estilos para el Modal */
        .modal {
            display: none; /* Oculto por defecto */
            position: fixed; /* Fijo en la pantalla */
            z-index: 1000; /* Asegurar que esté encima de otros elementos */
            left: 0;
            top: 0;
            width: 100%; /* Ancho completo */
            height: 100%; /* Altura completa */
            overflow: auto; /* Habilitar scroll si es necesario */
            background-color: rgba(0,0,0,0.8); /* Fondo semi-transparente */
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            position: relative;
            margin: auto;
            padding: 0;
            width: 80%;
            max-width: 700px;
        }

        .modal-content img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        /* Botón de Cerrar */
        .close-modal {
            position: absolute;
            top: 10px;
            right: 25px;
            color: #fff;
            font-size: 35px;
            font-weight: bold;
            cursor: pointer;
        }

        .close-modal:hover,
        .close-modal:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }

        /* Estilos para las tablas */
        .table-container {
            margin: 40px auto;
            width: 90%;
            overflow-x: auto;
        }

        table.display {
            width: 100%;
            border-collapse: collapse;
        }

        table.display th,
        table.display td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        table.display th {
            background-color: #f2f2f2;
        }

        table.display tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table.display tr:hover {
            background-color: #ddd;
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        /* Estilos para las imágenes de logo */
        .logo-image {
            height: 50px;
            width: auto;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .logo-image:hover {
            transform: scale(1.1);
        }

        /* Estilos para los botones de acción */
        .action-button {
            margin: 0 5px;
            padding: 5px 10px;
            cursor: pointer;
        }

        .edit-button {
            background-color: #4CAF50; /* Verde */
            color: white;
            border: none;
            border-radius: 4px;
        }

        .delete-button {
            background-color: #f44336; /* Rojo */
            color: white;
            border: none;
            border-radius: 4px;
        }

        /* Estilos para la barra de navegación de pestañas */
        .tab-nav {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            border-bottom: 2px solid #4CAF50;
        }

        .tab-nav button {
            background-color: transparent;
            border: none;
            outline: none;
            padding: 14px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 16px;
            color: #555;
        }

        .tab-nav button.active {
            border-bottom: 4px solid #4CAF50;
            color: #333;
            font-weight: bold;
        }

        /* Estilos para las secciones de contenido de las pestañas */
        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <h1>Administración de Clientes</h1>
        </div>
    </header>
    <main>
        <!-- Barra de Navegación de Pestañas -->
        <div class="tab-nav">
            <button class="tab-link active" data-tab="iftf">Clientes IFTF</button>
            <button class="tab-link" data-tab="mayoristas">Clientes Mayoristas</button>
            <button class="tab-link" data-tab="masivo">Clientes Masivo</button>
        </div>

        <!-- Contenido de las Pestañas -->

        <!-- Clientes IFTF -->
        <div id="iftf" class="tab-content active">
            <div class="table-container">
                <h2>Clientes IFTF</h2>
                <table id="clientsTable" class="display">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Texto Extraído</th>
                            <th>Notas Adicionales</th>
                            <th>Fecha de Envío</th>
                            <th>Logo</th>
                            <th>Prioridad</th> <!-- Nueva columna -->
                            <th>Acciones</th> <!-- Nueva columna -->
                        </tr>
                    </thead>
                    <tbody>
                        <% clients.forEach(client => { %>
                            <tr>
                                <td><%= client.email %></td>
                                <td><%= client.extractedText %></td>
                                <td><%= client.additionalNotes %></td>
                                <td><%= client.submissionDate ? client.submissionDate.toDate().toLocaleString() : 'N/A' %></td>
                                <td>
                                    <% if (client.logoURL) { %>
                                        <img src="<%= client.logoURL %>" alt="Logo" class="logo-image clickable">
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td><%= client.priority || 0 %></td> <!-- Mostrar prioridad -->
                                <td>
                                    <button class="action-button edit-button" data-id="<%= client.id %>" data-collection="clients">Editar</button>
                                    <button class="action-button delete-button" data-id="<%= client.id %>" data-collection="clients">Eliminar</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Tarjetas Julian -->
            <div class="table-container">
                <h2>Tarjetas Julian</h2>
                <table id="julianClientsTable" class="display">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Notas Adicionales</th>
                            <th>Fecha de Envío</th>
                            <th>Logo</th>
                            <th>Prioridad</th> <!-- Nueva columna -->
                            <th>Acciones</th> <!-- Nueva columna -->
                        </tr>
                    </thead>
                    <tbody>
                        <% julianClients.forEach(client => { %>
                            <tr>
                                <td><%= client.email %></td>
                                <td><%= client.name %></td>
                                <td><%= client.phone %></td>
                                <td><%= client.additionalNotes %></td>
                                <td><%= client.submissionDate ? client.submissionDate.toDate().toLocaleString() : 'N/A' %></td>
                                <td>
                                    <% if (client.logoURL) { %>
                                        <img src="<%= client.logoURL %>" alt="Logo" class="logo-image clickable">
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td><%= client.priority || 0 %></td> <!-- Mostrar prioridad -->
                                <td>
                                    <button class="action-button edit-button" data-id="<%= client.id %>" data-collection="julianClients">Editar</button>
                                    <button class="action-button delete-button" data-id="<%= client.id %>" data-collection="julianClients">Eliminar</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Tarjetas Agregadas Manualmente -->
            <div class="table-container">
                <h2>Tarjetas Agregadas Manualmente</h2>
                <table id="manualClientsTable" class="display">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Notas Adicionales</th>
                            <th>Fecha de Envío</th>
                            <th>Logo</th>
                            <th>Prioridad</th> <!-- Nueva columna -->
                            <th>Acciones</th> <!-- Nueva columna -->
                        </tr>
                    </thead>
                    <tbody>
                        <% manualClients.forEach(client => { %>
                            <tr>
                                <td><%= client.email %></td>
                                <td><%= client.name %></td>
                                <td><%= client.phone %></td>
                                <td><%= client.additionalNotes %></td>
                                <td><%= client.submissionDate ? client.submissionDate.toDate().toLocaleString() : 'N/A' %></td>
                                <td>
                                    <% if (client.logoURL) { %>
                                        <img src="<%= client.logoURL %>" alt="Logo" class="logo-image clickable">
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td><%= client.priority || 0 %></td> <!-- Mostrar prioridad -->
                                <td>
                                    <button class="action-button edit-button" data-id="<%= client.id %>" data-collection="manualClients">Editar</button>
                                    <button class="action-button delete-button" data-id="<%= client.id %>" data-collection="manualClients">Eliminar</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Clientes Mayoristas -->
        <div id="mayoristas" class="tab-content">
            <div class="table-container">
                <h2>Clientes Mayoristas</h2>
                <!-- Aquí puedes agregar la tabla para Clientes Mayoristas en el futuro -->
                <p>Aún no hay datos para Clientes Mayoristas.</p>
            </div>
        </div>

        <!-- Clientes Masivo -->
        <div id="masivo" class="tab-content">
            <div class="table-container">
                <h2>Clientes Masivo</h2>
                <!-- Aquí puedes agregar la tabla para Clientes Masivo en el futuro -->
                <p>Aún no hay datos para Clientes Masivo.</p>
            </div>
        </div>
    </main>

    <!-- Modal para Mostrar el Logo Agrandado -->
    <div id="logoModal" class="modal">
        <span class="close-modal">&times;</span>
        <div class="modal-content">
            <img id="modalImage" src="" alt="Logo Agrandado">
        </div>
    </div>

    <!-- Scripts de jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Scripts de DataTables -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <!-- Script de Inicialización de DataTables -->
    <script>
        $(document).ready(function() {
            // Inicializar DataTables para Clientes por Tarjeta IFTF
            $('#clientsTable').DataTable({
                "order": [[5, "desc"], [3, "desc"]], // Ordenar por Prioridad y Fecha de Envío
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Acciones)
                ]
            });

            // Inicializar DataTables para Tarjetas Julian
            $('#julianClientsTable').DataTable({
                "order": [[5, "desc"], [3, "desc"]], // Ajustado el índice de prioridad
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Acciones)
                ]
            });

            // Inicializar DataTables para Tarjetas Agregadas Manualmente
            $('#manualClientsTable').DataTable({
                "order": [[5, "desc"], [3, "desc"]], // Ajustado el índice de prioridad
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Acciones)
                ]
            });

            // Inicializar DataTables para Clientes Mayoristas (futuro)
            $('#wholesaleClientsTable').DataTable({
                "order": [[6, "desc"], [4, "desc"]], // Ordenar por Prioridad y Fecha de Envío
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Acciones)
                ]
            });

            // Inicializar DataTables para Clientes Masivo (futuro)
            $('#massiveClientsTable').DataTable({
                "order": [[6, "desc"], [4, "desc"]], // Ordenar por Prioridad y Fecha de Envío
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json" // Cambiar a español
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 } // Desactivar ordenamiento en la última columna (Acciones)
                ]
            });

            // Funcionalidad de las Pestañas
            $('.tab-link').click(function() {
                var tab_id = $(this).attr('data-tab');

                $('.tab-link').removeClass('active');
                $('.tab-content').removeClass('active');

                $(this).addClass('active');
                $("#" + tab_id).addClass('active');
            });
        });

        // Funcionalidad del Modal
        const modal = document.getElementById("logoModal");
        const modalImg = document.getElementById("modalImage");
        const closeBtn = document.getElementsByClassName("close-modal")[0];

        // Abrir el modal al hacer clic en una imagen de logo
        const logos = document.querySelectorAll(".logo-image.clickable");
        logos.forEach(function(logo) {
            logo.addEventListener("click", function() {
                modal.style.display = "flex";
                modalImg.src = this.src;
            });
        });

        // Cerrar el modal al hacer clic en la 'x'
        closeBtn.onclick = function() { 
            modal.style.display = "none";
        }

        // Cerrar el modal al hacer clic fuera de la imagen
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // Cerrar el modal con la tecla Esc
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                modal.style.display = "none";
            }
        });

        // Manejar el clic en el botón de eliminar
        $(document).on('click', '.delete-button', function() {
            const docId = $(this).data('id');
            const collection = $(this).data('collection');
            if (confirm('¿Estás seguro de que deseas eliminar esta entrada?')) {
                $.ajax({
                    url: '/admin/delete',
                    type: 'POST',
                    data: { id: docId, collection: collection },
                    success: function(response) {
                        alert('Entrada eliminada con éxito.');
                        location.reload();
                    },
                    error: function(err) {
                        alert('Error al eliminar la entrada.');
                    }
                });
            }
        });

        // Manejar el clic en el botón de editar
        $(document).on('click', '.edit-button', function() {
            const docId = $(this).data('id');
            const collection = $(this).data('collection');
            window.location.href = `/admin/edit?id=${docId}&collection=${collection}`;
        });
    </script>
</body>
</html>


        </div>
    </main>

    <!-- Modal para Mostrar el Logo Agrandado -->
    <div id="logoModal" class="modal">
        <span class="close-modal">&times;</span>
        <div class="modal-content">
            <img id="modalImage" src="" alt="Logo Agrandado">
        </div>
    </div>

    <!-- Scripts de jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Scripts de DataTables -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <!-- Script de Inicialización de DataTables -->
    <script>
        $(document).ready(function() {
            // Inicializar DataTables para Clientes por Tarjeta IFTF
            $('#clientsTable').DataTable({
                "order": [[5, "desc"], [3, "desc"]],
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });

            // Inicializar DataTables para Tarjetas Julian
            $('#julianClientsTable').DataTable({
                "order": [[5, "desc"], [3, "desc"]],
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });

            // Inicializar DataTables para Tarjetas Agregadas Manualmente
            $('#manualClientsTable').DataTable({
                "order": [[5, "desc"], [3, "desc"]],
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });

            // Inicializar DataTables para Clientes Mayoristas
            $('#wholesaleClientsTable').DataTable({
                "order": [[6, "desc"], [4, "desc"]],
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });

            // Inicializar DataTables para Clientes Masivo
            $('#massiveClientsTable').DataTable({
                "order": [[6, "desc"], [4, "desc"]],
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });

            // Funcionalidad de las Pestañas
            $('.tab-link').click(function() {
                var tab_id = $(this).attr('data-tab');

                $('.tab-link').removeClass('active');
                $('.tab-content').removeClass('active');

                $(this).addClass('active');
                $("#" + tab_id).addClass('active');
            });

            // Funcionalidad de los Botones "Agregar Usuario"
            $('#addWholesaleUserBtn').click(function() {
                $('#addWholesaleUserModal').css('display', 'flex');
            });

            $('#addMassiveUserBtn').click(function() {
                $('#addMassiveUserModal').css('display', 'flex');
            });

            // Cerrar los modales al hacer clic en la 'x'
            $('#closeWholesaleModal').click(function() {
                $('#addWholesaleUserModal').css('display', 'none');
                $('#addWholesaleUserForm')[0].reset();
            });

            $('#closeMassiveModal').click(function() {
                $('#addMassiveUserModal').css('display', 'none');
                $('#addMassiveUserForm')[0].reset();
            });

            // Cerrar el modal al hacer clic fuera del contenido
            window.onclick = function(event) {
                if (event.target == document.getElementById('logoModal')) {
                    $('#logoModal').css('display', 'none');
                }
                if (event.target == document.getElementById('addWholesaleUserModal')) {
                    $('#addWholesaleUserModal').css('display', 'none');
                    $('#addWholesaleUserForm')[0].reset();
                }
                if (event.target == document.getElementById('addMassiveUserModal')) {
                    $('#addMassiveUserModal').css('display', 'none');
                    $('#addMassiveUserForm')[0].reset();
                }
            }

            // Cerrar el modal con la tecla Esc
            document.addEventListener('keydown', function(event) {
                if (event.key === "Escape") {
                    $('#logoModal').css('display', 'none');
                    $('#addWholesaleUserModal').css('display', 'none');
                    $('#addMassiveUserModal').css('display', 'none');
                    $('#addWholesaleUserForm')[0].reset();
                    $('#addMassiveUserForm')[0].reset();
                }
            });

            // Funcionalidad del Modal de Logo
            const modal = document.getElementById("logoModal");
            const modalImg = document.getElementById("modalImage");
            const closeBtn = document.getElementsByClassName("close-modal")[0];

            // Abrir el modal al hacer clic en una imagen de logo
            const logos = document.querySelectorAll(".logo-image.clickable");
            logos.forEach(function(logo) {
                logo.addEventListener("click", function() {
                    modal.style.display = "flex";
                    modalImg.src = this.src;
                });
            });

            // Cerrar el modal al hacer clic en la 'x'
